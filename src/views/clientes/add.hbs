<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form id="clientForm" action="/add" method="post" onsubmit="return validateForm()">
                        <div class="input-group mt-2">
                            <label for="nomcli" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Nombres" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="apecli" class="input-group-text">Apellidos</label>
                            <input class="form-control" type="text" name="apecli" id="apecli" placeholder="Apellidos" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="nrodnicli" class="input-group-text">Nro. DNI</label>
                            <input class="form-control" type="text" name="nrodnicli" id="nrodnicli" placeholder="Nro. DNI" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="telcli" class="input-group-text">Nro. Teléfono</label>
                            <input class="form-control" type="text" name="telcli" id="telcli" placeholder="Nro. Célular" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" type="submit">Guardar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/list">Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function validateForm() {
    const nomcli = document.getElementById('nomcli').value.trim();
    const apecli = document.getElementById('apecli').value.trim();
    const nrodnicli = document.getElementById('nrodnicli').value.trim();
    const telcli = document.getElementById('telcli').value.trim();

    if (!nomcli || !apecli || !nrodnicli || !telcli) {
        alert("Por favor, complete todos los campos.");
        return false; // Detiene el envío del formulario
    }

    // Validar el formato del DNI (puedes ajustarlo según el formato que necesites)
    if (!/^\d+$/.test(nrodnicli)) {
        alert("El Nro. DNI debe ser solo números.");
        return false;
    }

    // Validar el formato del teléfono (ajustar según lo que consideres válido)
    if (!/^\d{7,15}$/.test(telcli)) {
        alert("El Nro. Teléfono debe tener entre 7 y 15 dígitos.");
        return false;
    }

    return true; // Permite el envío del formulario
}
</script>
